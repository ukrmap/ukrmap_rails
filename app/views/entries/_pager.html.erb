<ul class="pager">
  <% if (e = @entry.previous_entry) %>
    <li class="previous"><a href="<%= show_entry_path(course: e.course, id: e.id) %>">&larr; <%= e.title %></a></li>
  <% else %>
    <li class="previous disabled"><a href="#">&larr; Previous</a></li>
  <% end %>
  <% if (e = @entry.next_entry) %>
    <li class="next"><a href="<%= show_entry_path(course: e.course, id: e.id) %>"><%= e.title %> &rarr;</a></li>
  <% else %>
    <li class="next disabled"><a href="#">Next &rarr;</a></li>
  <% end %>
</ul>
